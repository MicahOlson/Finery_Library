<h3>Authors</h3>

<form action="/authors">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="authors_search" name="search" class="form-control" type="text" required>
  </div>
  <button type="submit" class="btn">Search</button>
</form>

<% if @authors.any? %>
  <ul>
    <% @authors.each do |author| %>
      <li><a href="/authors/<%= author.id %>"><%= author.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no authors to display.</p>
<% end %>

<p><a href="/authors/new">Add a new author</a></p>
